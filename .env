# 同步多少个联系人的历史（未读优先）
SYNC_CONTACT_COUNT=3

# 同步多少小时内的消息
STARTUP_SYNC_HOURS=12
# 并发数：
STARTUP_SYNC_CONCURRENCY=5
# 启动后延迟多久开始同步（毫秒）
STARTUP_SYNC_DELAY_MS=5000
######## 心跳监控配置 ########
